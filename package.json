{
  "name": "treasure-website",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:remix": "remix vite:dev",
    "dev:generate": "npm run generate -- --watch",
    "generate": "node -r dotenv/config node_modules/.bin/gql-gen",
    "build": "npm run generate && remix build",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "fix": "biome check --write --unsafe .",
    "knip": "knip",
    "typecheck": "tsc -b",
    "start": "remix-serve build",
    "prepare": "husky"
  },
  "dependencies": {
    "@biomejs/biome": "^1.8.0",
    "@headlessui/react": "^2.1.8",
    "@heroicons/react": "^2.0.16",
    "@radix-ui/react-accordion": "^1.1.2",
    "@remix-run/node": "^2.12.1",
    "@remix-run/react": "^2.12.1",
    "@remix-run/serve": "^2.12.1",
    "@treasure-project/tailwind-config": "^2.1.0",
    "clsx": "^2.1.1",
    "dotenv": "^16.0.3",
    "framer-motion": "^11.9.0",
    "graphql": "^16.6.0",
    "graphql-request": "5.1.0",
    "graphql-tag": "^2.12.6",
    "i18next": "^23.15.1",
    "i18next-browser-languagedetector": "^8.0.0",
    "i18next-fs-backend": "^2.3.2",
    "i18next-http-backend": "^2.6.1",
    "isbot": "^5.1.17",
    "keen-slider": "^6.8.5",
    "nprogress": "^0.2.0",
    "pretty-cache-header": "^1.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.0.2",
    "remix-i18next": "^6.4.1",
    "remix-utils": "^7.7.0",
    "swiper": "^11.0.5",
    "tailwind-merge": "^2.5.2",
    "tailwindcss": "^3.2.7",
    "tailwindcss-animate": "^1.0.5",
    "valibot": "^0.29.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^3.2.2",
    "@graphql-codegen/typescript": "^3.0.2",
    "@graphql-codegen/typescript-graphql-request": "^4.5.8",
    "@graphql-codegen/typescript-operations": "^3.0.2",
    "@remix-run/dev": "^2.12.1",
    "@tailwindcss/typography": "^0.5.9",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^18.0.29",
    "@types/react-dom": "^18.0.11",
    "autoprefixer": "^10.4.17",
    "husky": "^9.1.6",
    "knip": "^5.30.6",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "tailwind-scrollbar": "^3.0.0",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "app/**/{*.ts,*.tsx}": "npm run fix"
  }
}
